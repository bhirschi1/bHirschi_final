@{ ViewData["Title"] = "Details";
}
@model bHirschi_final.Models.Entertainer

<h1>@ViewData["Title"] of @Model.EntStageName</h1>
    <form method="post" asp-action="Save">
        <!--Give a summary for validation-->
        <div asp-validation-summary="All"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="stageName">Stage Name</label>
                <input type="text" class="form-control" id="stageName" value="@Model.EntStageName" asp-for="EntStageName">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="phone">Phone</label>
                <input type="text" class="form-control" id="phone" value="@Model.EntPhoneNumber" asp-for="EntPhoneNumber">
            </div>
            <div class="form-group col-md-6">
                <label for="email">Email</label>
                <input type="text" class="form-control" id="email" value="@Model.EntEMailAddress" asp-for="EntEMailAddress">
            </div>
        </div>

        <div class="form-group">
            <label for="inputAddress">Address</label>
            <input type="text" asp-for="EntStreetAddress" class="form-control" id="inputAddress" value="@Model.EntStreetAddress">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input type="text" asp-for="EntCity" class="form-control" id="inputCity">
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">State</label>
                <select id="inputState" class="form-control" asp-for="EntState">
                    <option value="@Model.EntState" selected>@Model.EntState</option>
                    <option value="AL">AL</option>
                    <option value="AK">AK</option>
                    <option value="AZ">AZ</option>
                    <option value="AR">AR</option>
                    <option value="CA">CA</option>
                    <option value="CO">CO</option>
                    <option value="CT">CT</option>
                    <option value="DE">DE</option>
                    <option value="FL">FL</option>
                    <option value="GA">GA</option>
                    <option value="HI">HI</option>
                    <option value="ID">ID</option>
                    <option value="IL">IL</option>
                    <option value="IN">IN</option>
                    <option value="IA">IA</option>
                    <option value="KS">KS</option>
                    <option value="KY">KY</option>
                    <option value="LA">LA</option>
                    <option value="ME">ME</option>
                    <option value="MD">MD</option>
                    <option value="MA">MA</option>
                    <option value="MI">MI</option>
                    <option value="MN">MN</option>
                    <option value="MS">MS</option>
                    <option value="MO">MO</option>
                    <option value="MT">MT</option>
                    <option value="NE">NE</option>
                    <option value="NV">NV</option>
                    <option value="NH">NH</option>
                    <option value="NJ">NJ</option>
                    <option value="NM">NM</option>
                    <option value="NY">NY</option>
                    <option value="NC">NC</option>
                    <option value="ND">ND</option>
                    <option value="OH">OH</option>
                    <option value="OK">OK</option>
                    <option value="OR">OR</option>
                    <option value="PA">PA</option>
                    <option value="RI">RI</option>
                    <option value="SC">SC</option>
                    <option value="SD">SD</option>
                    <option value="TN">TN</option>
                    <option value="TX">TX</option>
                    <option value="UT">UT</option>
                    <option value="VT">VT</option>
                    <option value="VA">VA</option>
                    <option value="WA">WA</option>
                    <option value="WV">WV</option>
                    <option value="WI">WI</option>
                    <option value="WY">WY</option>
                </select>

            </div>
            <div class="form-group col-md-2">
                <label for="inputZip">Zip</label>
                <input type="text" class="form-control" id="inputZip" value="@Model.EntCity" asp-for="EntZipCode">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="social">Social Security Number</label>
                <input type="text" readonly class="form-control-plaintext" id="social" value="@Model.EntSSN" asp-for="EntSSN">
            </div>
            <div class="form-group col-md-6">
                <label for="id">Entertainer ID</label>
                <input type="text" readonly class="form-control-plaintext" id="id" value="@Model.EntertainerID" asp-for="EntertainerID">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="web">Web Page</label>
                <input type="text" class="form-control" id="web" value="@Model.EntWebPage" asp-for="EntWebPage">
            </div>
            <div class="form-group col-md-6">
                <label for="date">Date Entered</label>
                <input type="date" class="form-control" id="date" value="@Model.DateEntered.ToString("yyyy-MM-dd")" asp-for="DateEntered">
            </div>
        </div>
        <button type="submit" class="btn btn-lg btn-block btn-success" style="width: 18rem;">Save Changes</button>
    </form>


